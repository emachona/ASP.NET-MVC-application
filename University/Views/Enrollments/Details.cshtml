</div>
<div>
     @if (User.Identity.IsAuthenticated && User.IsInRole("Admin")){
    <a asp-action="Edit" asp-route-id="@Model?.EnrollmentID">Edit</a>
    <span>|</span>
    <a asp-action="Index">Back to List</a>
     }
      @if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
    {
        <a asp-action="EditAsStudent" asp-route-id="@Model?.StudentID">Edit</a>
    }
    @if (User.Identity.IsAuthenticated && User.IsInRole("Teacher")){
                    
    <a asp-controller="Courses" asp-action="CoursesTeaching" asp-route-id="@Model?.CourseID">Back to Courses</a>
    }
</div>
